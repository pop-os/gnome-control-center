+      if (g_strcmp0 (gtk_theme, "Yaru") == 0)
+        theme_item = self->theme_standard;
+      else if (g_strcmp0 (gtk_theme, "Yaru-light") == 0)
+        theme_item = self->theme_light;
+      else if (g_strcmp0 (gtk_theme, "Yaru-dark") == 0)
+        theme_item = self->theme_dark;
+    }
