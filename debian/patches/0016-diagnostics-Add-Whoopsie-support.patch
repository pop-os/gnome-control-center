+                                                                G_DBUS_PROXY_FLAGS_NONE,
+                                                                "com.ubuntu.WhoopsiePreferences",
+                                                                "/com/ubuntu/WhoopsiePreferences",
+                                                                NULL, &error);
+
+  if (self->whoopsie)
