+static void
+copy_finished_cb (GObject      *source_object,
+                  GAsyncResult *result,
+                  gpointer      pointer)
+{
+  GError *err = NULL;
+  CcAppearancePanel *panel = (CcAppearancePanel *) pointer;
+  CcAppearancePanelPrivate *priv = panel->priv;
+  CcAppearanceItem *item;
