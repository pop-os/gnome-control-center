+static gboolean
+colors_equal (const char *a,
+	      const char *b)
+{
+	GdkColor color1, color2;
+
+	gdk_color_parse (a, &color1);
+	gdk_color_parse (b, &color2);
+
+	return gdk_color_equal (&color1, &color2);
+}
