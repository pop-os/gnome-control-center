+static gboolean
+files_equal (const char *a,
+	     const char *b)
+{
+	GFile *file1, *file2;
+	gboolean retval;
+
+	if (a == NULL &&
+	    b == NULL)
+		return TRUE;
+
+	if (a == NULL ||
+	    b == NULL)
+		return FALSE;
+
+	file1 = g_file_new_for_commandline_arg (a);
+	file2 = g_file_new_for_commandline_arg (b);
+	if (g_file_equal (file1, file2) == FALSE)
+		retval = FALSE;
+	else
+		retval = TRUE;
+	g_object_unref (file1);
+	g_object_unref (file2);
+
+	return retval;
+}
