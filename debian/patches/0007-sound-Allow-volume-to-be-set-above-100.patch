                                      g_settings_get_boolean (self->sound_settings, "allow-volume-above-100-percent"));
+  cc_volume_slider_set_is_amplified (self->output_volume_slider_ubuntu,
+                                     g_settings_get_boolean (self->sound_settings, "allow-volume-above-100-percent"));
 }
 
